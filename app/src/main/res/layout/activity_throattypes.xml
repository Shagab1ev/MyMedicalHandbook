<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/throat_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/types_head" />

            <ImageButton
                android:id="@+id/first_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:onClick="onClickFirstThroatType"
                app:srcCompat="@drawable/first_type_throat" />

            <ImageButton
                android:id="@+id/second_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:onClick="onClickSecondThroatType"
                app:srcCompat="@drawable/second_type_throat" />

            <ImageButton
                android:id="@+id/third_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:onClick="onClickThirdThroatType"
                app:srcCompat="@drawable/third_type_throat" />

            <ImageButton
                android:id="@+id/fourth_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:onClick="onClickFourthThroatType"
                app:srcCompat="@drawable/fourth_type_throat" />

            <ImageButton
                android:id="@+id/fifth_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:onClick="onClickFifthThroatType"
                app:srcCompat="@drawable/fifth_type_throat" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>