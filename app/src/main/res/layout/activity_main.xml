<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack"
        android:scaleType="centerCrop"
        app:srcCompat="@color/colorBack"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/doctor"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/banner_logo"
        app:srcCompat="@drawable/doctor"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/banner_logo"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorBack"
        app:layout_constraintTop_toTopOf="@+id/main_background"
        app:srcCompat="@drawable/banner_logo"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/mainmenu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorBack"
        android:onClick="onClickMenu"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@+id/doctor"
        app:srcCompat="@drawable/mainmenu"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>